{
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "indent": [
        "error",
        2,
        { "SwitchCase": 1 }
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "off",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ],
    "no-console": [
      "off"
    ],
    "no-undef": ["error"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "none" }]
  }
}
